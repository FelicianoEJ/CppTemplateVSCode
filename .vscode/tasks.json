{
    "tasks": [
        {
            "label": "Build",
            "detail": "Build the project in x64 using Powershell Developer Command Prompt.",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    "executable": "pwsh.exe",
                    "args": [
                        // "-ExecutionPolicy",
                        // "Bypass",
                        "-Command",
                        "Import-Module 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\Microsoft.VisualStudio.DevShell.dll'; Enter-VsDevShell -SetDefaultWindowTitle -DevCmdArguments '-arch=x64 -host_arch=x64' -VsInstallPath 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Community' -SkipAutomaticLocation;"
                    ]
                },
            },
            "type": "shell",
            // "command": "env",
            "command": "cl",
            "args": [
                "/std:c++23preview",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:${workspaceFolder}\\bin\\",
                "/Fo:${workspaceFolder}\\bin\\",
                "/Fd:${workspaceFolder}\\bin\\",
                "main.cpp"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
